    "version": "0.2.0",
    "configurations": [
        {
            "name":"Launch",
            "type":"cppdbg",
            "request":"launch",
            "program":"${workspaceRoot}/bin/godot.linuxbsd.editor.dev.x86_64.llvm.mono",
            "args":[
                "--path",
                "~/Documents/Godot/height-right/",
                "-e"
            ],
            "cwd":"${workspaceFolder}",
            "linux":{
                "MIMode":"gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            }
        }
    ]
}